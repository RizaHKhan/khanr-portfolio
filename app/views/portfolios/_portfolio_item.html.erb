<div class="col-md-4">
  <div class="card mb-4 box-shadow">
    <%= image_tag portfolio_item.thumbnail_image unless portfolio_item.thumbnail_image.nil? %>
    <div class="card-body">
      <h1><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %></h1>
      <p class="card-text"><em><%= portfolio_item.subtitle %></em></p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
          <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
        </div>
      </div>
    </div>
  </div>
</div>
