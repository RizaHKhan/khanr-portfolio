<h1><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %></h1>
<%= image_tag portfolio_item.thumbnail_image unless portfolio_item.thumbnail_image.nil?%>
<em><%= portfolio_item.subtitle %></em>
<p><%= portfolio_item.body %></p>
<%= image_tag portfolio_item.main_image if !portfolio_item.main_image.nil?%>
<%# You can just add i instead of i.id because rails will automatically use the id parameter %>
<%= link_to 'Edit', edit_portfolio_path(portfolio_item) %>
<%= link_to 'Delete Portfolio Item', portfolio_path(portfolio_item), method: :delete, data: {confirm: 'Are you sure?'}  %>

