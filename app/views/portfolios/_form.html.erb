<%= form_with(model: @portfolio_item, local: true) do |form| %>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= form.label :subtitle %>
        <%= form.text_area :subtitle, class: "form-control" %>
      </div>
      <div class="form-group">
        <label class='btn btn-primary'>
          Upload a main image file <%= form.file_field :main_image, style: 'display:none;' %>
        </label>
      </div>
      <div class="form-group">
        <label class='btn btn-primary'>
          Upload a thumb image file <%= form.file_field :thumbnail_image, style: 'display:none;' %>
        </label>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :body %>
        <%= form.text_area :body, class: "form-control", rows: 16 %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <h2>Technologies Used:</h2>
      <%= form.fields_for :technologies do |technology_form| %>
        <div class='form-group'>
          <%= technology_form.label :name %>
          <%= technology_form.text_field :name, class: 'form-control' %>
        </div class='form-group'>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <div class="actions">
        <%= form.submit 'Save Portfolio', class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
<% end %>
