<% if featured && current_page?(blogs_path)%>
<div class="jumbotron p-3 p-md-5 text-white rounded bg-dark">
  <div class="col-md-6 px-0">
    <h1 class="display-4 font-italic"><%= featured.title %></h1>
    <p class="lead my-3"><%= truncate(featured.body, length: 150) %></p>
    <p class="lead mb-0"><%= link_to 'Continue reading...', blog_path(featured.id), class: 'text-white font-weight-bold' %></p>
  </div>
</div>
<% end %>
